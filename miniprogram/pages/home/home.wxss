/* 深色模式 */
.bodydark{
  font-size: 16px;
  font-family: "PingFang SC", "Helvetica Neue", Helvetica, "Hiragino Sans GB", Arial, "Microsoft YaHei", "微软雅黑", sans-serif, "Segoe UI Emoji", "Segoe UI Symbol";
  color: white;
  position: relative;
  background: black;
}

.nav-bar {
  position: fixed;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #E7F0D2;
  color: #BDC6B8;
  font-size: 0.95em;
  height: 30px;
  align-items: center;
  width: 100%;
  z-index: 2;
}

.nav-bar view {
  width: 16%;
  margin: 0 1%;
  text-align: center;
}

.news-container {
  /* margin:2%; */
  box-sizing: border-box;
  /* width:95%; */
  position: relative;
  padding: 0rpx 15rpx;
}

.news-item {
  line-height: 30px;
  border-bottom: 1px solid #E7F0D2;
  height: 90px;
  box-sizing: border-box;
}
.news-itemdark {
  line-height: 30px;
  border-bottom: 1px solid #242424;
  height: 90px;
  box-sizing: border-box;
}
.text-img {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 90px;
  width: 100%;
  box-sizing: border-box;
  padding: 5px 0;
  position: absolute;
}

.text {
  width: 65%;
  /* height: 120rpx; */
  box-sizing: border-box;
  /* padding-right:2%; */
}

.title {
  /* width: 65%; */
  height: 120rpx;
  box-sizing: border-box;
  /* padding-right:2%; */
  display: flex;
  /* //超出一行文字自动隐藏 */
  text-overflow: ellipsis;
  overflow: hidden;
}

.img {
  width: 35%;
  box-sizing: border-box;
  padding-left: 1%;
}

.img image {
  width: 100%;
  height: 100%;
}

.news-footer {
  font-size: 0.7rem;
  color: #BDC6B8;
}

.load {
  text-align: center;
  margin-top: 10px;
  box-shadow: 0 0 10px #ccc;
  height: 30px;
  position: relative;
  top: 40px;
}

.bg {
  background-color: #D53C3E;
  height: 40px;
  display: flex;
  flex-direction: row;
}

.name {
  width: 30%;
  text-align: center;
  color: #ffffff;
  font-weight: bold;
  font-size: 20px;
}

.search {
  width: 70%;
  display: flex;
  flex-direction: row;
  border: 1px solid #cccccc;
  height: 25px;
  margin-right: 10px;
  background-color: #F6F5F3;
  border-radius: 5px;
  align-items: center;
}

.search image {
  margin-left: 10px;
}

.search input {
  margin-left: 10px;
  font-size: 13px;
}

.navbg {
  background-color: #F6F5F3;
  height: 36px;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.navbgdark {
  background-color: #242424;
  height: 36px;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.nav {
  width: 100%;
  height: 36px;
}

.add {
  width: 15%;
  height: 50px;
  line-height: 50px;
  font-size: 50px;
  text-align: right;
  margin-right: 10px;
}

.scroll-view_H {
  height: 40px;
  display: flex;
  flex-direction: row;
  margin-left: 5px;
}

.select {
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  /* font-size: 14px; */
  font-weight: bold;
}

.normal {
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  /* font-size: 14px; */
}

.item {
  margin: 10px;
}

/* .title {
  color: #444444;
  font-weight: bold;
  font-size: 18px;
} */

.pic image {
  margin-right: 10px;
}

.desc text {
  margin-right: 10px;
}

.opr {
  width: 10%;
}

.hr {
  border: 1px solid #cccccc;
  opacity: 0.2;
  margin-top: 10px;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}