/* pages/video/video.wxss */

.video-container {
    /* margin:2%; */
    box-sizing: border-box;
    /* width:95%; */
    position: relative;
    padding: 0rpx 15rpx;
}

.video-item {
    width: 100%;
    height: 560rpx;
    padding-top: 5rpx;
    border-bottom: 1px solid #E7F0D2;
    line-height: 30px;
}

.video-img {
    display: flex;
    flex-direction: column;
    padding: 20rpx 0;
}

.picture {
    width: 100%;
    /* background-image: '/icons/start.png'; */
    /* padding-left: 10rpx; */
    padding-right: 10rpx;
    height: 350rpx;
    justify-content: center;
    /* text-align: center; */
}

.text {
    height: 120rpx;
    /* padding-left: 5rpx; */
    /* padding-right: 5rpx; */
    /* text-align: center; */
    /* //超出一行文字自动隐藏 */
    text-overflow: ellipsis;
    overflow: hidden;
    /* bottom: 1px; */
}

.author {
    font-size: 0.7rem;
    color: #BDC6B8;
    padding-bottom: 5rpx;
    position: relative;
    padding-left: 10rpx;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}