/* pages/myfav/myfav.wxss */

page {
  width: 100%;
  height: 100%;
  /* background-color: #f6f6f6; */
  overflow-y: hidden;
}

/* .container {
      flex-flow: column nowrap; 
      justify-content: top; 
      align-items: top;
      width: 100%;
      height: 100%;
  } */

.news-container {
  /* margin:2%; */
  box-sizing: border-box;
  /* width:95%; */
  position: relative;
  padding: 0rpx 15rpx;
}

.news-item {
  line-height: 30px;
  border-bottom: 1px solid #E7F0D2;
  height: 90px;
  box-sizing: border-box;
}

.text-img {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 90px;
  width: 100%;
  box-sizing: border-box;
  padding: 5px 0;
  position: absolute;
}

.text {
  width: 65%;
  /* height: 120rpx; */
  box-sizing: border-box;
  /* padding-right:2%; */
}

.title {
  /* width: 65%; */
  height: 120rpx;
  box-sizing: border-box;
  /* padding-right:2%; */
  display: flex;
  /* //超出一行文字自动隐藏 */
  text-overflow: ellipsis;
  overflow: hidden;
}

.img {
  width: 35%;
  box-sizing: border-box;
  padding-left: 1%;
}

.img image {
  width: 100%;
  height: 100%;
}

.news-footer {
  font-size: 0.7rem;
  color: #BDC6B8;
}

/* 顶部导航栏 */

.navbg {
  background-color: #F6F5F3;
  height: 36px;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #DCDCDC;
}

.nav {
  width: 100%;
  height: 36px;
  padding-top: 18rpx
}

.scroll-view_H {
  height: 30px;
  display: flex;
  flex-direction: row;
  /* margin-left: 5px; */
  justify-content: center;
}

.select {
  /* width: 40px; */
  height: 28px;
  /* line-height: 40px; */
  padding-left: 15px;
  padding-right: 15px;
  font-size: 18px;
  font-weight: bold;
  color: #696969;
  border-bottom: 1px solid #DCDCDC;
}

.normal {
  /* width: 80px; */
  height: 28px;
  /* line-height: 50px; */
  padding-left: 15px;
  padding-right: 15px;
  font-size: 18px;
  color: #696969;
  /* text-decoration: underline; */
}

/* 视频列表 */

/* pages/video/video.wxss */

.video-container {
  /* margin:2%; */
  box-sizing: border-box;
  /* width:95%; */
  position: relative;
  padding: 0rpx 15rpx;
}

.video-item {
  width: 100%;
  height: 560rpx;
  padding-top: 5rpx;
  border-bottom: 1px solid #E7F0D2;
  line-height: 30px;
}

.video-img {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}

.picture {
  width: 100%;
  /* background-image: '/icons/start.png'; */
  /* padding-left: 10rpx; */
  padding-right: 10rpx;
  height: 350rpx;
  justify-content: center;
  /* text-align: center; */
}

.videotext {
  height: 120rpx;
  /* padding-left: 5rpx; */
  /* padding-right: 5rpx; */
  /* text-align: center; */
  /* //超出一行文字自动隐藏 */
  text-overflow: ellipsis;
  overflow: hidden;
  /* bottom: 1px; */
}

.author {
  font-size: 0.7rem;
  color: #BDC6B8;
  padding-bottom: 5rpx;
  position: relative;
  padding-left: 10rpx;
}

/* 新闻底部评论展示 */

.comments {
  width: 100%;
  padding-bottom: 60px;
}

.commentsTitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.commentsCenter {
  padding-top: 10rpx
}

.headline {
  font-size: 21px;
  font-weight: 625;
  padding-left: 24rpx;
}

.order {
  font-size: 14px;
  padding-right: 30rpx
}

.commentsContent {
  padding-left: 76rpx;
  /* padding-top: 6rpx; */
  font-size: 16px;
  padding-bottom: 30rpx;
  line-height: 0.5em;
}

.commentsItem {
  height: auto;
  padding-left: 23rpx;
  border-bottom: 1rpx solid #DCDCDC;
}

.commentsTop {
  display: flex;
  flex-direction: row;
  padding-top: 25rpx;
}

.portrait {
  width: 70rpx;
  height: 70rpx;
  padding-top: 9rpx;
}

.icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.arritbute {
  display: flex;
  /* flex-direction: column; */
  padding-left: 9rpx;
}

.floor {
  position: absolute;
  right: 22rpx;
  color: rgb(127, 127, 127);
  font-size: 14px;
}

.nickname {
  font-size: 16px;
}

.location {
  font-size: 12px;
  color: rgb(135, 135, 135);
  /* line-height: 1.3em; */
  padding-left: 20rpx;
  padding-top: 3rpx;
}

.newsTitle {
  height: auto;
  background-color: rgb(249, 249, 249);
  font-size: 13px;
  margin-left: 74rpx;
  margin-right: 20rpx;
  margin-bottom: 24rpx;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}