/* pages/myfav/myfav.wxss */

page {
    width: 100%;
    height: 100%;
    background-color: #f6f6f6;
    overflow-y: hidden;
}

/* .container {
      flex-flow: column nowrap; 
      justify-content: top; 
      align-items: top;
      width: 100%;
