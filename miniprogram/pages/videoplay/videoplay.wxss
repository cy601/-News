/* pages/videoplay/videoplay.wxss */
.page {
  display: flex;
  flex-direction: column;
}

.pagedark {
  display: flex;
  flex-direction: column;
  background: black;
  position: absolute;
  height: 100%;
  color: white;
}

.video {
  width: 100%;
  /* height: auto; */
}

.title {
  font-size: 40rpx;
  padding: 10rpx 20rpx;
}

.foot {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #BDC6B8;
  font-size: 0.7rem;
  padding: 0 20rpx;

}

.author {
  /* font-size: 28rpx; */
  float: left;
}

.hotindex {
  /* font-size: 28rpx; */
  float: right;
}

.star {
  width: 10%;
}

.endstar {
  width: 25px;
  height: 40px;
  align-items: center;
  display: flex;
  position: fixed;
  right: 18rpx;
}

.review {
  width: 100%;
  height: 40px;
  position: fixed;
  bottom: 0;
  background-color: #F8F9FB;
  display: flex;
  flex-direction: row;
}

.reviewdark {
  width: 100%;
  height: 45px;
  position: fixed;
  bottom: 0;
  background-color: #242424;
  display: flex;
  flex-direction: row;
}

.back {
  width: 32px;
  height: 40px;
  align-items: center;
  padding-left: 8px;
  display: flex;
  flex-direction: row;
}

.backicon {
  width: 25px;
  height: 25px;
  align-items: center;
  /* padding-top: 7px; */
  /* padding-right: 5px; */
}

.commentsbar {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  border-left: 1px solid #D3D3D3;
  padding-left: 10px;
  height: 40px;
  align-items: center;
  width: 80%;
}

.commit {
  position: relative;
  /* right: 100rpx; */
  margin-right: 20rpx;
  width: 40px;
  height: 25px;
  border: 1px solid #DCDCDC;
  text-align: center;
  color: #696969;
}

/* 新闻底部评论展示 */


.comments {
  width: 100%;
  padding-bottom: 60px;
}

.commentsTitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.commentsCenter {
  padding-top: 35rpx
}

.headline {
  font-size: 21px;
  font-weight: 625;
  padding-left: 24rpx;
}

.order {
  font-size: 14px;
  padding-right: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.commentsContent {
  padding-left: 76rpx;
  padding-top: 24rpx;
  font-size: 18px;
  padding-bottom: 30rpx;
}

.commentsItem {
  height: auto;
  padding-left: 23rpx;
  border-bottom: 1rpx solid #DCDCDC;
}

.commentsTop {
  display: flex;
  flex-direction: row;
  padding-top: 25rpx;
}

.portrait {
  width: 70rpx;
  height: 70rpx;
  padding-top: 9rpx;
}

.icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.arritbute {
  display: flex;
  flex-direction: column;
  padding-left: 9rpx;
}

.floor {
  position: absolute;
  right: 30rpx;
  color: rgb(127, 127, 127);
  font-size: 14px;
}

.nickname {
  font-size: 16px;
}

.location {
  font-size: 12px;
  color: rgb(135, 135, 135);
  line-height: 1.3em;
  padding-left: 1rpx;
}

.name_device {
  display: flex;
  flex-direction: row;
}

.device {
  /* padding-left: 5rpx; */
  display: flex;
  flex-direction: row;
  color: #7BA62C;
  font-size: 13px;
  padding-top: 6rpx;
}