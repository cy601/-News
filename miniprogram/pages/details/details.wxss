/* pages/details/details.js.wxss */

.rich-text-div {
  padding: 30rpx;
  padding-bottom: 42rpx;
}

.aritcle-title {
  color: black;
  /* font-size :24px; */
}

rich-text {
  /* font-size: 16px; */
  /* line-height: 24px; */
  line-height: 150%;
}

.subtitle {
  flex-direction: row;
  display: flex;
}

/* 原文来源 */

.aritcle-source {
  font-size: 12px;
  color: #B4B4B4;
  flex-direction: row;
  display: flex;
  padding-bottom: 20rpx;
  padding-top: 15rpx;
}

/* 原文超链接 */

.source-url {
  font-size: 14px;
  color: #586B93;
}

.star {
  width: 25px;
  height: 25px;
  align-content: flex-end;
  padding-left: 24rpx;
  /* align-items: center; */
}

.endstar {
  width: 25px;
  height: 45px;
  align-items: center;
  display: flex;
  position: fixed;
  right: 20rpx;
}

.review {
  width: 100%;
  height: 45px;
  position: fixed;
  bottom: 0;
  background-color: #F8F9FB;
  display: flex;
  flex-direction: row;
}

.back {
  width: 32px;
  height: 45px;
  align-items: center;
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
}

.backicon {
  width: 25px;
  height: 25px;
  align-items: center;
  /* padding-top: 7px; */
  /* padding-right: 5px; */
}

.commentsbar {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  border-left: 1px solid #D3D3D3;
  padding-left: 10px;
  height: 45px;
  align-items: center;
  width: 80%;
}

.commit {
  position: relative;
  /* right: 100rpx; */
  margin-right: 26rpx;
  width: 45px;
  height: 25px;
  border: 1px solid #DCDCDC;
  text-align: center;
  color: #696969;
}

.bt {
  /* width: 240rpx; */
  /* height: 90rpx; */
  /* text-align: left; */
  /* line-height: 38px; */
  background-color: transparent;
  /*按钮透明*/
  border: none;
  /*设置按钮边框*/
}

.bt::after {
  border: none；
}

/* 清除button原有样式 */

.button {
  padding: 0 0;
  font-weight: normal;
  /* padding-left: 0; */
  width: auto;
  color: #696969;
  /* font-size: ; */
  display: flex;
  text-align: center;
}

/* 新闻底部评论展示 */

.comments {
  width: 100%;
  padding-bottom: 60px;
}

.commentsTitle {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.commentsCenter {
  padding-top: 35rpx
}

.headline {
  font-size: 21px;
  font-weight: 625;
  padding-left: 24rpx;
}

.order {
  font-size: 14px;
  padding-right: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.commentsContent {
  padding-left: 76rpx;
  padding-top: 24rpx;
  font-size: 18px;
  padding-bottom: 30rpx;
}

.commentsItem {
  height: auto;
  padding-left: 23rpx;
  border-bottom: 1rpx solid #DCDCDC;
}

.commentsTop {
  display: flex;
  flex-direction: row;
  padding-top: 25rpx;
}

.portrait {
  width: 70rpx;
  height: 70rpx;
  padding-top: 9rpx;
}

.icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.arritbute {
  display: flex;
  flex-direction: column;
  padding-left: 9rpx;
}

.floor {
  position: absolute;
  right: 30rpx;
  color: rgb(127, 127, 127);
  font-size: 14px;
}

.nickname {
  font-size: 16px;
}

.location {
  font-size: 12px;
  color: rgb(135, 135, 135);
  line-height: 1.3em;
  padding-left:1rpx ;
}
.name_device{
  display: flex;
  flex-direction: row;
}
.device{
  /* padding-left: 5rpx; */
  display: flex;
  flex-direction: row;
  color:#7BA62C;
  font-size: 13px;
  padding-top: 6rpx;
}